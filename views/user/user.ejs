                    </div>
                    <div class="single-hero-slider single-animation-wrap">
                        <div class="container">
                            <div class="row align-items-center slider-animated-1">
                                <div class="col-lg-5 col-md-6">
                                   
                                </div>
                                <div class="col-lg-7 col-md-6">
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
               
            </div>
        </div>
    </section>
    
</main>

  <section class="product-tabs section-padding wow fadeIn animated">

    <div class="container">

      <h3 class="">Best Sellers</h3>
      <br>

      <!--End nav-tabs-->
      <div class="tab-content wow fadeIn animated" id="myTabContent">
        <div class="tab-pane fade show active" id="tab-one" role="tabpanel" aria-labelledby="tab-one">
          <div class="row product-grid-3">
            <% response.forEach(function(response) { %>

              <div class="col-lg-3 col-md-4 col-12 col-sm-6">
                <div class="product-cart-wrap mb-30">
                  <div class="product-img-action-wrap">
                    <div class="product-img product-img-zoom">
                      <a href="/image">
                        <a href="/image/<%=response._id %> ">
                          <img class="default-img" src="/uploads/<%= response.Image[0] %>" alt="">
                        </a>
                      </a>
                    </div>
                    <div class="product-action-1">
                     
                      <a aria-label="Add To Wishlist" class="action-btn hover-up" onclick="addtowishlist('<%-response._id%>');Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: 'Product is successfully added to wishlist',
                        showConfirmButton: false,
                        timer: 1500
                      })"><i class="fi-rs-heart"></i></a>"><i class="fi-rs-heart"></i></a>
                      
                    </div>

                  </div>
                  <div class="product-content-wrap">
                    <div class="product-category">
                      <a href="shop-grid-right.html">
                        <%=response.category%>
                      </a>
                    </div>
                    <h2>
                      <a href="shop-product-right.html">
                        <%=response.Productname%>
                      </a>
                    </h2>
                    <div class="rating-result" title="90%">
                      <span>
                        <span>90%</span>
                      </span>
                    </div>
                    <div class="product-price">
                      <span>
                        <%=response.Price%>
                      </span>
                    </div>
                    <div class="product-action-1 show">
                      <button aria-label="Add To Cart" class="action-btn hover-up" onclick="addtocart('<%-response._id%>');;Swal.fire({
                        position: 'center',
                        icon: 'success',
                        title: 'Product is successfully added to cart',
                        showConfirmButton: false,
                        timer: 1500
                      })"> <i class="fi-rs-shopping-bag-add"></i> </button>
                    </div>
                  </div>
                </div>
              </div>
              <% }) %>

          </div>


          <!--End product-grid-4-->
        </div>
        <!--En tab one (Featured)-->

        <!--End product-grid-4-->
      </div>
      <!--En tab three (New added)-->
    </div>
    <!--End tab-content-->
    </div>
  </section>
</main>

<!-- Preloader Start -->
<div id="preloader-active">

  <div class="preloader d-flex align-items-center justify-content-center">
    <div class="preloader-inner position-relative">
      <div class="text-center">
        <h5 class="mb-5">Now Loading</h5>
        <div class="loader">
          <div class="bar bar1"></div>
          <div class="bar bar2"></div>
          <div class="bar bar3"></div>
        </div>
      </div>
    </div>
  </div>
</div>
</section>


<script>


function addtocart(proId) {

  $.ajax({
    url: '/add-to-cart/' + proId,
    method: 'get',
    success: (response) => {
      if (response.status) {
        let count = $('#cart-count').html()
        count = parseInt(count) + 1
        $("cart-count").html(count)

      }

    }

  })

}
function addtowishlist(proId) {
  console.log(proId);
  $.ajax({
    url: '/add_to_wishlist?wishid=' + proId,
    method: 'get',
    success: (response) => {
      let count = $('#wish-count').html()
      count = parseInt(count) + 1
      $("wish-count").html(count)

    }

  })

}

</script>