<style>

#return-form-btn {
  display: inline-block;
  padding: 10px;
  background-color: #ccc;
  color: #fff;
  border: none;
  cursor: pointer;
  font-size: 16px;
}

#return-form {
  display: none;
  margin-top: 20px;
  padding: 20px;
  border: 1px solid #ccc;
  background-color: #fff;
}

  #return-form label {
    display: block;
    margin-bottom: 10px;
  }

  #return-form select {
    width: 100%;
    padding: 5px;
    border-radius: 5px;
    border: 1px solid #ccc;
    margin-bottom: 20px;
  }

  #return-form input[type="text"],
  #return-form input[type="date"],
  #return-form input[type="submit"] {
    width: 100%;
    padding: 5px;
    border-radius: 5px;
    border: 1px solid #ccc;
    margin-bottom: 20px;
  }

  #return-form input[type="submit"] {
    background-color: #007bff;
    color: #fff;
    border: none;
  }

  #return-form input[type="submit"]:hover {
    background-color: #0062cc;
  }
