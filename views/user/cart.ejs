<section>

    <% if(locals.count!=0){%>

        <main class="main">

            <section class="mt-50 mb-50">
                <div class="container">
                    <div class="row">
                        <div class="col-12">
                            <div class="table-responsive">
                                <table class="table shopping-summery text-center clean">
                                    <thead>
                                        <tr class="main-heading">

                                            <th scope="col">Image</th>
                                            <th scope="col">Name</th>
                                            <th scope="col">Price</th>
                                            <th scope="col">Quantity</th>
                                            <!-- <th scope="col">Subtotal</th> -->
                                            <th scope="col">Remove</th>
                                        </tr>
                                    </thead>

                                    <tbody>

                                        <% cartItems.forEach(function(cartItems){%>

                                            <tr>

                                                <td> <img src="/uploads/<%=cartItems.carted.Image[0]%>"></td>
                                                <td class="product-des product-name">
                                                    <h5 class="product-name"><a href="">
                                                            <%=cartItems.carted.Productname%>
                                                        </a></h5>
                                                    <p class="font-xs">
                                                        <%=cartItems.carted.category%>
                                                    </p>
                                                    <p class="font-xs">
                                                        <%=cartItems.carted.ProductDescription%>
                                                    </p>

                                                </td>
                                                <td class="price" cartItemss-title="Price"><span>
                                                        <%=cartItems.carted.Price%>
                                                    </span></td>
                                                <td class="text-center" cartItemss-title="Stock">
                                                    <h6 id="stockMessage" class="message" style="color: red;"></h6>
                                                    <div class="detail-qty border radius  m-auto">
                                                        <div><button class="cart-item-count "
                                                                onclick="changeQuantity('<%= cartItems._id%>','<%= cartItems.item %>','<%= userId.id %>',-1)">-</button>
                                                        </div>
                                                        <span id="<%= cartItems.item %>">
                                                            <%= cartItems.quantity%>
                                                        </span>
                                                        <% if(cartItems.carted.Quantity> cartItems.quantity){%>
                                                            <div> <button class="cart-item-count"
                                                                    onclick="changeQuantity('<%= cartItems._id%>','<%= cartItems.item %>','<%= userId.id %>',1)">+</button>
                                                                <%}%>

                                                            </div>

                                                    </div>
                                                </td>
                                                <h2 style="display: none;" id="Quantity">
                                                    <%=cartItems.carted.Quantity%>
                                                </h2>
                                                <td class="text-right" cartItemss-title="total">

                                                </td>
                                                <td class="action" cartItemss-title="Remove"><button class="text-muted"
                                                        onclick="removeItem('<%-cartItems._id%>','<%-cartItems.item%>')"><i
                                                            class="fi-rs-trash"></i></button></td>

                                            </tr>


                                            <tr>
                                                <td colspan="6" class="text-end">
                                                    <a href="#" class="text-muted"> <i
                                                            class="fi-rs-cross-small"></i></a>
                                                </td>

                                            </tr>
                                            <%}) %>

                                    </tbody>

                                </table>
                            </div>
                            <div class="cartItems-action text-end">
                                <!-- <a class="btn  mr-10 mb-sm-15"><i class="fi-rs-shuffle mr-10"></i>Update cartItems</a>
                            <a class="btn "><i class="fi-rs-shopping-bag mr-10"></i>Continue Shopping</a> -->
                            </div>
                            <div class="divider center_icon mt-50 mb-50"><i class="fi-rs-fingerprint"></i></div>
                            <div class="row mb-50">
                                <div class="col-lg-6 col-md-12">


                                    <div class="mb-30 mt-50">
                                        <div class="heading_s1 mb-3">
                                            <h4>Apply Coupon</h4>
                                        </div>
                                        <div class="total-amount">
                                            <div class="left">
                                                <div class="coupon">
                                                    <form target="_blank">
                                                        <div class="form-row row justify-content-center">
                                                            <div class="form-group col-lg-6">
                                                                <input class="font-medium" id="cpn" name="Coupon"
                                                                    placeholder="Enter Your Coupon">
                                                            </div>
                                                            <div class="form-group col-lg-6">


                                                                <button type="button" class="btn  btn-sm"
                                                                    onclick="validatecoupon()"><i
                                                                        class="fi-rs-label mr-10"></i>Apply</button>

                                                            </div>
                                                            <h6 id="couponUsedErr" class="message" style="color: red;">
                                                            </h6>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <div class="border p-md-4 p-30 border-radius cartItems-totals">
                                        <div class="heading_s1 mb-3">
                                            <h4>cartItems Totals</h4> <span class="message" type="hidden"
                                                id="successMesage" style="margin-left: 15rem; color: green;"></span>
                                        </div>
                                        <div class="table-responsive">
                                            <table class="table">
                                                <tbody>
                                                    <tr>
                                                        <td class="cartItems_total_label">cartItems Subtotal</td>
                                                        <td class="cartItems_total_amount"><span id="subtotal"
                                                                class="font-lg fw-900 text-brand">
                                                                <%=total%>
                                                            </span></td>
                                                    </tr>
                                                    <tr>
                                                        <td class="cartItems_total_label">Shipping</td>
                                                        <td class="cartItems_total_amount"> <i class="ti-gift mr-5"></i>
                                                            Free
                                                            Shipping</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="cartItems_total_label">Discount Amount</td>
                                                        <td class="cartItems_total_amount" id="discountAmount"> <i
                                                                class="ti-gift mr-5"></i>0</td>
                                                    </tr>
                                                    <tr>
                                                        <td class="cartItems_total_label">Total</td>
                                                        <td class="cartItems_total_amount" name="total"><strong><span
                                                                    id="total" class="font-xl fw-900 text-brand ">
                                                                    <%= total%>
                                                                </span></strong></td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                        <form class="form-sample" action="/cart" method="POST">
                                            <input type="hidden" name="total" id="checkTotal">
                                            <input type="hidden" name="couponName" id="couponName">
                                            <input type="hidden" name="discountAmount" id="couponDiscountAmount">


                                            <% if(locals.cartItems[0]?.carted?.Quantity>0){%>
                                                <button type="submit" class="btn "><i
                                                        class="fi-rs-box-alt mr-10"></i>Proceed To
                                                    CheckOut</button>

                                                <%}else{%>
                                                    <p class="text-danger"> This Product Is Currently Out Of Stock</p>

                                                    <%} %>


                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </main>

        <%}else{%>

            <div class="d-flex justify-content-center">
                <img src="/assets/imgs/banner/cart1.png" alt="">
            </div>

            <%} %>

</section>


<script>
    function changeQuantity(cartId, prodId, userId, count) {
        console.log(cartId);
        console.log(prodId);
        console.log(count);
        console.log(userId);
        let quantity = parseInt(document.getElementById(prodId).textContent)
        let Quantity = document.getElementById('Quantity').textContent
        console.log(quantity);
        if (quantity+1  === parseInt(Quantity-1)) {
                document.getElementById('stockMessage').innerHTML = "Only One stock Is Left for This Product"
            }
        if (count === 1) {
            if (quantity + 1 === parseInt(Quantity)) {
                location.reload();
            }
        }
         console.log(parseInt(Quantity));
        if (count === -1) {
            if (quantity  === parseInt(Quantity)) {
                location.reload();
            }
        }
        setTimeout(function() {
  document.getElementById("stockMessage").style.display = "none";
}, 5000);
        console.log(Quantity);
        console.log('actual ');
        count = parseInt(count)



        $.ajax({
            url: '/change_product_quantity',
            method: 'PUT',
            data: {
                user: userId,
                cart: cartId,
                product: prodId,
                count: count,
                quantity: quantity,
                Quantity: Quantity

            },
            success: (response) => {
                console.log(response);
                if (response.removeProduct) {
                    alert("Removed Product From Cart")
                    location.reload()
                }
                else {
                    let cartQuantity = quantity + count
                    document.getElementById(prodId).innerHTML = cartQuantity
                    document.getElementById("total").innerHTML = response.total
                    document.getElementById("subtotal").innerHTML = response.total

                }
            }
        })
    }
    function removeItem(cartId, prodId) {
        Swal.fire({
            title: "Are you sure?",
            text: "You won't be able to revert this!",
            icon: "warning",
            showCancelButton: true,
            confirmButtonColor: "#3085d6",
            cancelButtonColor: "#d33",
            confirmButtonText: "Yes, delete it!",
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: '/delete_cart_item',
                    data: {
                        cartId: cartId,
                        product: prodId
                    },
                    method: 'DELETE',
                    success: (response) => {
                        if (response.removeProduct) {
                            location.reload()
                        }
                    }
                })
                Swal.fire("Deleted!", "Product is deleted from the wishlist.", "success");
            }
        });
    }
    let

    function validatecoupon() {
        couponname = document.getElementById('cpn').value
        $.ajax({
            url: '/validate_coupon?couponName=' + couponname,
            method: "POST",
            success: (response) => {
                if (response.discountAmount && response.couponTotal) {
                    document.getElementById('discountAmount').innerHTML = "-" + (response?.discountAmount)
                    document.getElementById('total').innerHTML = response?.couponTotal
                    document.getElementById('successMesage').innerHTML = response?.success
                }
                const checkTotalInput = document.getElementById('checkTotal');
                const couponNameInput = document.getElementById('couponName');
                const couponDiscountInput = document.getElementById('couponDiscountAmount')

                checkTotalInput.value = response?.couponTotal;
                couponNameInput.value = couponname;
                couponDiscountInput.value = response?.discountAmount;
                console.log(couponDiscountInput);

                if (response.err) {

                    document.getElementById('couponUsedErr').innerHTML = response.err

                }



            }
        })


    }

    setTimeout(function () {
        document.getElementsByClassName('.message').style.display = 'none';
    }, 3000);
</script>