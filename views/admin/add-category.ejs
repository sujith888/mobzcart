<section class="">
  <div class="container d-flex justify-content-center">
    <div class="row w-75 mt-5">
      <div class="col-md-12">
        <h2 class="text-center">Add Category</h2>
        <form
          action="/admin/add_category"
          method="POST"
         
        >
          <label for="">Category Name</label>
          <input type="text" name="categoryname" required="" class="form-control" />
          <% if(locals.categoryStatus) {%>
       <h6 class="message   " style="color: red;"> This Category Already Exist </h6>
          <%} else{%>
            
           <%}%>
          <label for="">SubCategory Name</label>
          <input type="text" name="subcategoryname" required="" class="form-control" />
          <button type="submit" class="btn btn-success mt-4">Submit</button>
        </form>
      </div>
    </div>
  </div>
</section>
<!-- Table section -->
<section w-50 mx-auto>
  <div class="card-body">
    <div class="row mt-5 mx-auto">
      <div class="table-responsive">
        <div class="table-responsive">
          <table id="table7" class="table align-middle table-nowrap mb-0">
            <thead class="table-light">
              <tr>
                <th class="align-middle" scope="col">NO:</th>
                <th class="align-middle" scope="col">Category Name</th>
                <th class="align-middle" scope="col">sub Category Name</th>

                <th class="align-middle" scope="col">Option</th>
              </tr>
            </thead>
            <tbody>
              <% viewCategory.forEach(function(viewCategory,index) { %>
              <tr>
                <td><%= index+1 %></td>
                <td><%= viewCategory.categoryName %></td>
    

                <td><%= viewCategory.subcategories[0].subcategoryName %></td>
            
                <td>
                  <a href="/admin/edit_category?edited=<%= viewCategory._id %>" class="btn btn-xs btn-danger"> Edit</a>
                  <a href="/admin/delete_category?deletedid=<%=viewCategory._id %>" class="btn btn-xs btn-danger"  onclick="return confirm('are you want to Delete <%=viewCategory.categoryName%>?')"> Delete</a>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
      <!-- table-responsive end// -->
    </div>
  </div>
</section>



<script>
  setTimeout(function () {
    document.querySelector('.message').style.display = 'none';
  }, 3000);
</script>